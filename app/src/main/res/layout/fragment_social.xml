<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.ui.GameActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="@string/social"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@color/mywhite"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/userStatisticsButton"
            style="@style/Theme.Wordino.ButtonClear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="User statistics"
            android:textSize="20dp"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"></Button>

        <Button
            android:id="@+id/localLeaderboardButton"
            style="@style/Theme.Wordino.ButtonCyanClear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Local leaderboard"
            android:textSize="20dp"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/localLeaderboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/maincyandark"
        android:backgroundTint="@color/mywhite"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="Place"
                android:textSize="20dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="Score"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="Date"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="1"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText1"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="2"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText2"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="3"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText3"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="4"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText4"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="5"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText5"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userStatistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gamePlayedText"
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/winrateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:numeric="integer"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentStreakText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/maxStreakText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="48sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gamesPlayedText"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Games_Played" />

            <TextView
                android:id="@+id/winrateTextView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Winrate" />

            <TextView
                android:id="@+id/currentStreakTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Current_Streak" />

            <TextView
                android:id="@+id/maxStreakTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Max_Streak" />

        </LinearLayout>

        <TextView
            android:id="@+id/guessDistributionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:gravity="bottom"
            android:text="@string/GUESS_DISTRIBUTION"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/horizontalBarChart"
            android:layout_width="match_parent"
            android:layout_height="400dp" />
    </LinearLayout>

</LinearLayout>