<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.ui.GameActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/social"
        android:textSize="34sp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="Place"
                android:textSize="20dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="Score"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="Date"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="1"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText1"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="2"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText2"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="3"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText3"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="4"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText4"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/scoreCard5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="5"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/scoreText5"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/dateText5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:textSize="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <TextView
        android:id="@+id/StatisticsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Statistics" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="155dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gamePlayedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/winrateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/currentStreakText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/maxStreakText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />


    </LinearLayout>

</LinearLayout>