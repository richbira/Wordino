<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/key_q"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:text="Q" />

        <TextView
            android:id="@+id/key_w"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_q"
            android:text="W" />
        <TextView
            android:id="@+id/key_e"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_w"
            android:text="E" />
        <TextView
            android:id="@+id/key_r"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_e"
            android:text="R" />
        <TextView
            android:id="@+id/key_t"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_r"
            android:text="T" />
        <TextView
            android:id="@+id/key_y"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_t"
            android:text="Y" />
        <TextView
            android:id="@+id/key_u"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_y"
            android:text="U" />
        <TextView
            android:id="@+id/key_i"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_u"
            android:text="I" />
        <TextView
            android:id="@+id/key_o"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_i"
            android:text="O" />
        <TextView
            android:id="@+id/key_p"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_o"
            android:text="P" />
        <TextView
            android:id="@+id/key_a"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_below="@id/key_q"
            android:layout_marginLeft="10dp"
            android:text="A" />
        <TextView
            android:id="@+id/key_s"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_a"
            android:layout_below="@id/key_q"
            android:text="S" />
        <TextView
            android:id="@+id/key_d"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_s"
            android:layout_below="@id/key_q"
            android:text="D" />
        <TextView
            android:id="@+id/key_f"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_d"
            android:layout_below="@id/key_q"
            android:text="F" />
        <TextView
            android:id="@+id/key_g"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_f"
            android:layout_below="@id/key_q"
            android:text="G" />
        <TextView
            android:id="@+id/key_h"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_g"
            android:layout_below="@id/key_q"
            android:text="H" />
        <TextView
            android:id="@+id/key_j"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_h"
            android:layout_below="@id/key_q"
            android:text="J" />
        <TextView
            android:id="@+id/key_k"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_j"
            android:layout_below="@id/key_q"
            android:text="K" />
        <TextView
            android:id="@+id/key_l"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_k"
            android:layout_below="@id/key_q"
            android:text="L" />
        <TextView
            android:id="@+id/key_z"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/key_a"
            android:text="Z" />
        <TextView
            android:id="@+id/key_x"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_z"
            android:layout_below="@id/key_a"
            android:text="X" />
        <TextView
            android:id="@+id/key_c"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_x"
            android:layout_below="@id/key_a"
            android:text="C" />
        <TextView
            android:id="@+id/key_v"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_c"
            android:layout_below="@id/key_a"
            android:text="V" />
        <TextView
            android:id="@+id/key_b"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_v"
            android:layout_below="@id/key_a"
            android:text="B" />
        <TextView
            android:id="@+id/key_n"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/key_b"
            android:layout_below="@id/key_a"
            android:text="N" />

        <TextView
            android:id="@+id/key_m"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_below="@id/key_a"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/key_n"
            android:text="M" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>