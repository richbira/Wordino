<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wordino" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/maincyan</item>
        <item name="colorPrimaryDark">@color/maincyandark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorForeground">@color/black</item>
    </style>

    <style name="Theme.Wordino" parent="Base.Theme.Wordino" />

    <style name="Theme.Wordino.Buttons" parent="@style/Widget.Material3.Button.OutlinedButton">

        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/mywhite</item>
    </style>

    <style name="Theme.Wordino.ButtonsCyan" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/maincyan</item>
    </style>

    <style name ="Theme.Wordino.Wordbox" parent="Base.Theme.Wordino" >
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/border_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">48sp</item>

    </style>

    <style name="Theme.Wordino.ButtonClear" parent="@style/Widget.Material3.Button.TextButton">

        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/mywhite</item>
    </style>

    <style name="Theme.Wordino.ButtonCyanClear" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/maincyan</item>
    </style>


</resources>